<!DOCTYPE html>
<html lang="PL">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{% block title %}Home{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Spartan&display=swap">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css" integrity="sha256-mmgLkCYLUQbXn0B1SRqzHar6dCnv9oZFPEC1g1cwlkk=" crossorigin="anonymous" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<nav class="shadow navbar navbar-expand-lg navbar-light bg-light bg-info m-0 p-0">
    <div style="background-color: #7900FF" class="container-fluid p-lg-0">
        <div class="col-2 d-flex navbar-collapse justify-content-center">
            <a href="{{ path('app_home') }}">
                <img src="{{ asset('/img/logo.png') }}" alt="logo" style="width: auto; height: auto; max-width: 280px; max-height: 150px">
            </a>
        </div>
        <div class="collapse navbar-collapse d-flex justify-content-end col-10 p-4" id="navbar-collapsable">
                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    <div style="font-weight: bold">{{ app.user.username }}</div>
                    <div class="dropdown">
                        <button
                                class="dropdown-toggle btn"
                                type="button"
                                id="user-dropdown"
                                data-bs-toggle="dropdown"
                                aria-expanded="false"
                        >
                            <img class="rounded"
                                 src="{{ app.user.getAvatarUri }}"
                                 alt="{{ app.user.name }} Avatar">
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="user-dropdown">
                            <li>
                                <div class="dropdown-item">
                                    {{ app.user.name }}
                                    {{ app.user.lastname }}
                                </div>
                            </li>
                            <li>
                                <a class="dropdown-item" href="{{ path('app_logout') }}">Log Out</a>
                            </li>
                        </ul>
                    </div>
                {% else %}
                {% endif %}
        </div>
    </div>

</nav>
{% block body %}{% endblock %}
</body>
</html>